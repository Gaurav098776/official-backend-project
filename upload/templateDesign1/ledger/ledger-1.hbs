                          margin: auto;
                          width: 100%;
                          max-width: 800px;
                          font-family: Lexend;
                          font-size: 12px;
                            padding:0 20px
                        " cellpadding="0" cellspacing="0">
                      <tr>
                        {{#each ledgerFields as |ledgerFields|}}
                        <th style="background-color: #2f1518;color: #fff;">
                          {{ledgerFields}}
                        </th>
                        {{/each}}
                      </tr>
                      {{#each disDetails as |disData index|}}
                      {{#cIf @index '<' 10}} <tr>
                        <td class="{{#cIf @last}} wrap-normal {{else}} wrap-nowrap-cell {{/cIf}}">{{disData.[TXN DATE]}}
                        </td>
                        <td>{{disData.PARTICULARS}}</td>
                        <td>{{disData.PLATFORM}}</td>
                        <td>{{disData.UTR}}</td>
                        <td>
                          {{#cIf disData.DR 'eq' }}
                          {{disData.DR}}
                          {{else}}
