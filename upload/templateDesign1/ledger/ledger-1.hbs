                          {{/cIf}}
                        </td>
                        <td>
                          {{#cIf disData.CR 'eq'}}
                          {{disData.CR}}
                          {{else}}
                          ₹{{disData.CR}}
                          {{/cIf}}
                        </td>
                        <td>
                          {{#cIf disData.BALANCE 'eq'}}
                          {{disData.BALANCE}}
                          {{else}}
                          ₹{{disData.BALANCE}}
                          {{/cIf}}
                        </td>
